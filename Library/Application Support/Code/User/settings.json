{
    "editor.fontFamily": "'Jetbrains Mono', 'Fira Code', 'Iosevka', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,

    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontLigatures.enabled": true,

    "workbench.iconTheme": "eq-material-theme-icons",
    "security.workspace.trust.untrustedFiles": "open",
    "security.workspace.trust.enabled": false,

    "workbench.colorTheme": "FireFly Pro",
    // "git.openRepositoryInParentFolders": "never",
    "editor.copyWithSyntaxHighlighting": false,
    "editor.cursorStyle": "block",
    // "editor.formatOnPaste": true,
    "editor.autoIndentOnPaste": true,
    // "editor.quickSuggestions": {
    //     "other": "off"
    // },
    "python.defaultInterpreterPath": "/Users/river/my/projects/python313venv",
    // "editor.autoClosingBrackets": "never",
    "editor.dragAndDrop": false,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.size": "fill",
    "vim.smartRelativeLine": true,
    "vim.cursorStylePerMode.insert": "block-outline",
    "editor.renderWhitespace": "trailing",
    "files.trimTrailingWhitespace": true,
    "editor.rulers": [120],
    "vim.sneak": true,
    "vim.sneakUseIgnorecaseAndSmartcase": true,
    "vim.sneakReplacesF": true,
    "vim.statusBarColorControl": true,
    // nice colors: #f74e37 #21A0A0 #7950f6 #37e3b2
    // 3772ff dodgerblue ec464f ff8f40 6cbf43 af85f4 5530ff
    "vim.statusBarColors.normal": ["#0e1421", "#787e8d"],
    "vim.statusBarColors.insert": ["#0000ff", "#ffffff"],
    "workbench.colorCustomizations": {
        "statusBar.background": "#0e1421",
        "statusBar.noFolderBackground": "#0e1421",
        "statusBar.debuggingBackground": "#0e1421",
        "statusBar.foreground": "#787e8d",
        "statusBar.debuggingForeground": "#787e8d"
    },
    "vim.leader": " ",
    "terminal.integrated.scrollback": 2000,
    "editor.cursorSurroundingLines": 8,
    "vim.highlightedyank.enable": true,
    "vim.insertModeKeyBindings": [
        {
            "before": ["w", "z"],
            "after": ["<Esc>"]
        },
        {
            "before": ["w", "f"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["z", "o"],
            "after": ["m", "z", "o", "<Esc>", "`", "z"],
            "silent": true
        },
        {
            "before": ["z", "u"],
            "after": ["O", "<Esc>", "j"]
            // the mark trick doesn't work here for some reason. bugged.
        },
        // {
        //     "before": ["z", "j"],
        //     "after": ["m", "z", "O", "<Esc>", "`", "z"],
        // },
        {
            "before": ["z", "w"],
            "after": ["m", "z", "j", "d", "d", "`", "z"],
            "silent": true
        },
        {
            "before": ["z", "d"],
            "after": ["m", "z", "k", "d", "d", "`", "z", "k"],
            "silent": true
        },
        {
            "before": ["K"],
            "commands": ["lineBreakInsert"],
            "silent": true
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [">"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<"],
            "commands": ["editor.action.outdentLines"]
        },
    ],
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    "git.confirmSync": false
}
